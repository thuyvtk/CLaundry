<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--        profile-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/black"
            android:orientation="vertical">

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif"
                android:text="Vo Kim Thuy"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingTop="7dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_star_yellow_12dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_star_yellow_12dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_star_yellow_12dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_star_yellow_12dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_star_yellow_12dp" />
            </LinearLayout>
        </LinearLayout>
        <!--        information-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/darker">

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scrollbars="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnAccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_tab"
                        android:outlineProvider="none"
                        android:paddingLeft="20dp"
                        android:text="Account"
                        android:textAlignment="textStart"
                        android:textAppearance="@style/CustomTextAppearance"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/btnHistory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_tab"
                        android:outlineProvider="none"
                        android:paddingLeft="20dp"
                        android:text="History"
                        android:textAlignment="textStart"
                        android:textAppearance="@style/CustomTextAppearance"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/btnPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_tab"
                        android:outlineProvider="none"
                        android:paddingLeft="20dp"
                        android:text="Phone number"
                        android:textAlignment="textStart"
                        android:textAppearance="@style/CustomTextAppearance"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/btnAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_tab"
                        android:outlineProvider="none"
                        android:paddingLeft="20dp"
                        android:text="Address"
                        android:textAlignment="textStart"
                        android:textAppearance="@style/CustomTextAppearance"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/btnForStore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/background_tab"
                        android:outlineProvider="none"
                        android:paddingLeft="20dp"
                        android:text="For Laundry store"
                        android:textAlignment="textStart"
                        android:textAppearance="@style/CustomTextAppearance"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/btnLogout"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="40dp"
                        android:background="@color/puple_blue"
                        android:text="LOGOUT"
                        android:textColor="@color/white" />


                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>